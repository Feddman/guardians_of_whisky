{
  "name": "guardians-of-whiskey",
  "version": "1.0.0",
  "description": "Whisky tasting companion app with real-time collaboration",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "npm ci --prefix client && npm run build --prefix client",
    "start": "node server/index.js",
    "install:all": "npm ci && npm ci --prefix client"
  },
  "keywords": [
    "whisky",
    "tasting",
    "companion"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
